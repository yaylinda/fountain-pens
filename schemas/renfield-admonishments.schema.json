{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Renfield Admonishments",
  "description": "Patterns that Renfield should NOT flag (learned dismissals)",
  "type": "object",
  "required": ["admonishments"],
  "properties": {
    "admonishments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/admonishment"
      }
    }
  },
  "definitions": {
    "admonishment": {
      "type": "object",
      "required": ["id", "pattern", "reason", "dismissedBy", "dismissedAt"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier"
        },
        "pattern": {
          "type": "object",
          "description": "Matching criteria (all specified fields must match)",
          "properties": {
            "filePattern": {
              "type": "string",
              "description": "Glob pattern for file paths (e.g., '**/*.test.ts')"
            },
            "lineRange": {
              "type": "array",
              "items": {
                "type": "integer"
              },
              "minItems": 2,
              "maxItems": 2,
              "description": "[start, end] line range"
            },
            "category": {
              "type": "string",
              "enum": ["security", "bug", "perf", "debt", "test", "docs", "deps"]
            },
            "severityAtMost": {
              "type": "string",
              "enum": ["critical", "high", "medium", "low"],
              "description": "Ignore concerns at or below this severity"
            },
            "titleContains": {
              "type": "string",
              "description": "Substring match on concern title"
            },
            "descriptionContains": {
              "type": "string",
              "description": "Substring match on concern description"
            },
            "contentHashExact": {
              "type": "string",
              "description": "Exact match on code snippet hash"
            }
          },
          "minProperties": 1
        },
        "reason": {
          "type": "string",
          "description": "Why this pattern should be ignored"
        },
        "dismissedBy": {
          "type": "string",
          "description": "Who dismissed it (e.g., 'bat-claudia', 'human:sean')"
        },
        "dismissedAt": {
          "type": "string",
          "format": "date-time"
        },
        "originalConcernId": {
          "type": "string",
          "description": "ID of the concern that triggered this admonishment"
        },
        "expiresAt": {
          "type": "string",
          "format": "date-time",
          "description": "Optional: admonishment expires after this date"
        }
      }
    }
  }
}
